<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pro.promark1.WhenToDo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tell Profile When To apply it !"
        android:id="@+id/TVwelcomeTextWhenToDo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WI-FI"
        android:id="@+id/BwifiWhenToDo"
        android:layout_below="@+id/TVwelcomeTextWhenToDo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="92dp"
        android:minWidth="125dp"
        android:onClick="onBwifi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cell Tower"
        android:id="@+id/BcellTowerWhenToDo"
        android:layout_alignTop="@+id/BwifiWhenToDo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:minWidth="125dp"
        android:onClick="onBcellTowerWhenToDo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/BtimeWhenToDo"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/BwifiWhenToDo"
        android:layout_alignStart="@+id/BwifiWhenToDo"
        android:minWidth="125dp"
        android:onClick="onBtimeWhenToDo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery"
        android:id="@+id/BbatteryWhenToDo"
        android:layout_alignBottom="@+id/BtimeWhenToDo"
        android:layout_alignRight="@+id/BcellTowerWhenToDo"
        android:layout_alignEnd="@+id/BcellTowerWhenToDo"
        android:minWidth="125dp"
        android:onClick="onBbatteryWhenToDo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done !!"
        android:id="@+id/BdoneWhenToDo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:minWidth="125dp"
        android:onClick="onBdone" />
</RelativeLayout>
