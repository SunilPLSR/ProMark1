<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pro.promark1.CreateProfile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile"
        android:id="@+id/TVheadingCreateProfile"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When To Do"
        android:id="@+id/BwhenToDoCreateProfile"
        android:layout_marginTop="116dp"
        android:minWidth="200dp"
        android:onClick="onBwhenToDo"
        android:layout_below="@+id/TVheadingCreateProfile"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What to do"
        android:id="@+id/BwhatToDoCreateProfile"
        android:layout_marginTop="36dp"
        android:minWidth="200dp"
        android:onClick="onBwhatToDo"
        android:layout_below="@+id/BwhenToDoCreateProfile"
        android:layout_alignLeft="@+id/BwhenToDoCreateProfile"
        android:layout_alignStart="@+id/BwhenToDoCreateProfile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Profile !"
        android:id="@+id/BcreateProfileCreateProfile"
        android:layout_marginTop="32dp"
        android:onClick="onBcreateProfile"
        android:layout_below="@+id/BwhatToDoCreateProfile"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
